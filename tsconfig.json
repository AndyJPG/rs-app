{
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts"
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "strict": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  }
}